<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="2"
    android:id="@+id/gamePlayLayout"
    tools:context="vut.mambane.quizapp.GamePlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back"
            android:foreground="@drawable/back">

            <ImageView
                android:id="@+id/imgQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/plainback" />

            <TextView
                android:id="@+id/txtQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgQuestion"
                android:layout_alignLeft="@+id/imgQuestion"
                android:layout_alignRight="@+id/imgQuestion"
                android:layout_alignTop="@+id/imgQuestion"
                android:layout_centerHorizontal="true"
                android:background="@drawable/backtext"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/textColor" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonsLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn1"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp"
            android:enabled="true"
            android:onClick="btnOnClick"
            android:text="New Button"
            android:textSize="12dp"
            android:background="@drawable/buttonstate"
            android:textStyle="bold"
            android:visibility="visible" />


        <Button
            android:id="@+id/btn2"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:onClick="btnOnClick"
            android:text="New Button"
            android:background="@drawable/buttonstate"
            android:textSize="12dp"
            android:textStyle="bold" />


        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn3"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp"
            android:onClick="btnOnClick"
            android:text="New Button"
            android:textSize="12dp"
            android:background="@drawable/buttonstate"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:onClick="btnOnClick"
            android:text="New Button"
            android:background="@drawable/buttonstate"
            android:textSize="12dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/radioLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdoTrue"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="41dp"
                android:onClick="rdoOnClick"
                android:background="@drawable/radiostate"
                android:text="True" />

            <RadioButton
                android:id="@+id/rdoFalse"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:onClick="rdoOnClick"
                android:background="@drawable/radiostate"
                android:text="False" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/checkboxLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">


        <CheckBox
            android:id="@+id/chk1"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp"
            android:background="@drawable/checkboxstate"
            android:text="New Button" />

        <CheckBox
            android:id="@+id/chk2"
            android:layout_width="110dp"
            android:background="@drawable/checkboxstate"
            android:layout_height="80dp"
            android:text="New Button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/checkboxLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/chk3"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginEnd="41dp"
            android:background="@drawable/checkboxstate"
            android:layout_marginRight="41dp"
            android:text="New Button" />

        <CheckBox
            android:id="@+id/chk4"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@drawable/checkboxstate"
            android:text="New Button" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:onClick="btnSubmitOnClick"
        android:text="@string/submit"
         />


    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        app:indicatorColor="@color/colorPrimaryDark"
        app:indicatorName="LineScalePulseOutIndicator" />

    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/challengeStats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
